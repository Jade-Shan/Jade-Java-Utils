				<version>${jadeutils.version}</version>
			</dependency>
			<dependency>
				<groupId>net.jade-dungeon</groupId>
				<artifactId>jadeutils-web</artifactId>
				<version>${jadeutils.version}</version>
			</dependency>
			<dependency>
				<groupId>net.jade-dungeon</groupId>
				<artifactId>jadeutils-sandtable</artifactId>
				<version>${jadeutils.version}</version>
